<div class="container mt-5">
  <h1 class="mb-4">Add a New Lodging</h1>

  <%= form_with model: @lodging, local: true do |form| %>
    <% if @lodging&.errors&.any? %>
      <div class="alert alert-danger mb-4">
        <h2 class="h4">Errors in the form:</h2>
        <ul class="mb-0">
          <% @lodging.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, "Titre", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>
    
    <div class="mb-3">
      <%= form.label :price, "Prix", class: "form-label" %>
      <div class="input-group">
        <%= form.number_field :price, class: "form-control", required: true, step: '0.01' %>
        <span class="input-group-text">â‚¬</span>
      </div>
    </div>
    
    <div class="mb-4">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 4, required: true %>
    </div>
    
    <div class="d-flex gap-3">
      <%= form.submit "Create Lodging", class: "btn btn-primary" %>
      <%= link_to "Back to List", lodgings_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>