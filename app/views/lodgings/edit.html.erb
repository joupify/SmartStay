<div class="container mt-5">
  <h1 class="mb-4">Edit a lodging</h1>
<%= form_with model: @lodging, url: lodging_path(@lodging.id), method: :patch, local: true do |form| %>
    <% if @lodging&.errors&.any? %>
      <div class="alert alert-danger mb-4">
        <h2 class="h4">Errors in the form:</h2>
        <ul class="mb-0">
          <% @lodging.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, "Title", class: "form-label" %>
    <%= form.text_field :title, value: @lodging.title %>
    </div>
    
    <div class="mb-3">
      <%= form.label :price, "Price", class: "form-label" %>
      <div class="input-group">
        <%= form.number_field :price, value: @lodging.price, class: "form-control", required: true, step: '0.01' %>
        <span class="input-group-text">â‚¬</span>
      </div>
    </div>
    
    <div class="mb-4">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, value: @lodging.description , class: "form-control", rows: 4 %>
    </div>
    
    <div class="d-flex gap-3">
      <%= form.submit "Update lodging", class: "btn btn-primary" %>
      <%= link_to "Back to list", lodgings_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>