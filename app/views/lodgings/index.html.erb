<div class="container mt-4 mb-5">
  <h1 class="h2 mb-4">Liste des logements</h1>
  <%= image_tag "https://source.unsplash.com/400x300/?villa,pool", alt: "Test Image" %>


  <div class="d-flex flex-column flex-md-row align-items-center justify-content-between gap-3 mb-4">
    <!-- Formulaire de recherche -->
    <%= form_with url: lodgings_path, method: :get, local: true, class: "flex-grow-1 w-100" do |form| %>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-search"></i>
        </span>
        <%= form.text_field :query,
          placeholder: "Rechercher un logement...",
          value: params[:query],
          class: "form-control" %>
        <%= form.submit "Rechercher", class: "btn btn-secondary" %>
      </div>
    <% end %>

    <!-- Bouton Ajouter -->
    <%= link_to "Ajouter un logement", new_lodging_path,
      class: "btn btn-primary ms-md-3 flex-shrink-0" %>
  </div>

  <section class="mb-5">
    <h2 class="h3 mb-3">Résultats</h2>
    
    <% if @lodgings.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @lodgings.each do |lodging| %>
          <% next if lodging[:id].blank? %>

          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0"><%= lodging[:title] %></h5>
    <%= image_tag lodging[:image_url], class: "card-img-top", alt: lodging[:title] if lodging[:image_url].present? %>
<%= image_tag "https://via.placeholder.com/400x300.png?text=No+Image", alt: "Placeholder" %>


                  <span class="badge bg-primary rounded-pill"><%= lodging[:price] %> €</span>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text"><%= lodging[:description] %></p>
              </div>
              <div class="card-footer bg-white border-top-0">
                <div class="d-flex justify-content-end gap-2">

                  <%= link_to lodging_path(lodging[:id]), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                    <i class="bi bi-eye"></i> 
                  <% end %>

                  <%= link_to similar_lodging_path(lodging[:id]), class: "btn btn-sm btn-outline-primary", title: "View Similar" do %>
                    <i class="bi bi-stars"></i> 
                  <% end %>

                  <%= link_to edit_lodging_path(lodging[:id]), class: "btn btn-sm btn-outline-warning", title: "Edit" do %>
                    <i class="bi bi-pencil"></i> 
                  <% end %>

                  <%= button_to delete_lodging_path(lodging[:id]), method: :delete, data: { confirm: "Confirmer la suppression ?" }, class: "btn btn-sm btn-outline-danger", title: "delete" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">Aucun logement trouvé.</div>
    <% end %>
  </section>

  <section class="mt-5">
    <h2 class="h3 mb-3">Top logements populaires</h2>
    
    <% if @top_lodgings.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @top_lodgings.each do |lodging| %>
          <div class="col">
            <div class="card h-100 border-warning shadow-sm">
              <div class="card-header bg-warning bg-opacity-10">
                <div class="d-flex justify-content-between align-items-center">
                      <%= image_tag lodging[:image_url], class: "card-img-top", alt: lodging[:title] if lodging[:image_url].present? %>

                  <h5 class="card-title mb-0"><%= lodging[:title] %></h5>
                  <span class="badge bg-warning text-dark rounded-pill"><%= lodging[:price] %> €</span>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text"><%= lodging[:description] %></p>
                <div class="d-flex align-items-center text-warning">
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-half"></i>
                  <small class="text-muted ms-2">4.5</small>
                </div>
              </div>
              <div class="card-footer bg-transparent">
                <%= link_to "Réserver maintenant", lodging_path(lodging[:key]), class: "btn btn-warning w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning">Aucun logement populaire.</div>
    <% end %>
  </section>
</div>