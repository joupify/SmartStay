<div class="container d-flex flex-column mx-auto">
  <!-- Barre de recherche -->
    <div class="mb-3">
        <%= form_with url: lodgings_path, method: :get, local: true, class: "d-flex gap-2" do %>
            <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Rechercher un logement" %>
            <%= submit_tag "Rechercher", class: "btn btn-primary" %>
        <% end %>
</div>


  <!-- Titre -->
  <h1 class="text-2xl font-bold">Liste des logements</h1>

  <!-- Liste des logements -->
  <div>
    <ul class="space-y-4">
      <% if @lodgings.any? %>
        <% @lodgings.each do |lodging| %>
          <li class="border border-gray-200 rounded-lg p-4 shadow-sm">
            <h3 class="text-lg font-semibold"><%= lodging[:title] %> — <%= lodging[:price] %> €</h3>
            <p class="text-gray-600"><%= lodging[:description] %></p>
          </li>
        <% end %>
      <% else %>
        <li class="text-gray-500">Aucun logement trouvé.</li>
      <% end %>
    </ul>
  </div>

  <!-- Bouton pour ajouter -->
  <div>
    <%= link_to "Ajouter un logement", new_lodging_path, class: "btn btn-primary" %>
  </div>
</div>
