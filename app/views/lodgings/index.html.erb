<div class="container mt-4 mb-5">
  <h1 class="h2 mb-4">List of Lodgings</h1>

  <div class="d-flex flex-column flex-md-row align-items-center justify-content-between gap-3 mb-4">
    <!-- Search form -->
    <%= form_with url: lodgings_path, method: :get, local: true, class: "flex-grow-1 w-100" do |form| %>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-search"></i>
        </span>
        <%= form.text_field :query,
          placeholder: "Search a lodging...",
          value: params[:query],
          class: "form-control" %>
        <%= form.submit "Search", class: "btn btn-secondary" %>
      </div>
    <% end %>

    <!-- Add lodging button -->
    <%= link_to "Add lodging", new_lodging_path,
      class: "btn btn-primary ms-md-3 flex-shrink-0" %>
  </div>

  <section class="mb-5">
    <h2 class="h3 mb-3">Results</h2>

    <% if @lodgings.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @lodgings.each do |lodging| %>
          <% next if lodging[:id].blank? %>

          <div class="col">
            <div class="card h-100 shadow-sm">
              <% if lodging[:image_url].present? %>
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                  <%= image_tag lodging[:image_url], class: "card-img-top img-fluid h-100 w-100 object-fit-cover", alt: lodging[:title] %>
                </div>
              <% end %>

              <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0"><%= lodging[:title] %></h5>
                  <span class="badge bg-primary rounded-pill"><%= lodging[:price] %> €</span>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text"><%= lodging[:description] %></p>
              </div>
              <div class="card-footer bg-white border-top-0">
                <div class="d-flex justify-content-end gap-2">
                  <%= link_to lodging_path(lodging[:id]), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                    <i class="bi bi-eye"></i> 
                  <% end %>

                  <%= link_to similar_lodging_path(lodging[:id]), class: "btn btn-sm btn-outline-primary", title: "View Similar" do %>
                    <i class="bi bi-stars"></i> 
                  <% end %>

                  <%= link_to edit_lodging_path(lodging[:id]), class: "btn btn-sm btn-outline-warning", title: "Edit" do %>
                    <i class="bi bi-pencil"></i> 
                  <% end %>

                  <%= button_to delete_lodging_path(lodging[:id]), method: :delete, data: { confirm: "Are you sure you want to delete this lodging?" }, class: "btn btn-sm btn-outline-danger", title: "delete" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">no results found.</div>
    <% end %>
  </section>


    <!-- Popular Lodgings -->
  <section class="mt-5">
    <h2 class="h3 mb-3">Top popular lodgings</h2>

    <% if @top_lodgings.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @top_lodgings.each do |lodging| %>
          <div class="col">
            <div class="card h-100 border-warning shadow-sm">
              <!-- Image for top popular lodgings -->
              <% if lodging[:image_url].present? %>
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                  <%= image_tag lodging[:image_url], class: "card-img-top img-fluid h-100 w-100 object-fit-cover", alt: lodging[:title] %>

                </div>
              <% end %>

              <div class="card-header bg-warning bg-opacity-10">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0"><%= lodging[:title] %></h5>
                  <span class="badge bg-warning text-dark rounded-pill"><%= lodging[:price] %> €</span>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text"><%= lodging[:description] %></p>
                <div class="d-flex align-items-center text-warning">
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-half"></i>
                  <small class="text-muted ms-2">4.5</small>
                </div>
              </div>
              <div class="card-footer bg-transparent">
                <%= link_to "Réserver maintenant", lodging_path(lodging[:id]), class: "btn btn-warning w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning">No popular lodgings found.</div>
    <% end %>
  </section>
</div>
