  <section class="mt-5">
    <h2 class="h3 mb-3">logements similaires</h2>
  <% if @lodgings.present? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @lodgings.each do |lodging| %>
          <div class="col">
            <div class="card h-100 border-warning shadow-sm">
              <div class="card-header bg-warning bg-opacity-10">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0"><%= lodging[:title] %></h5>
                  <span class="badge bg-warning text-dark rounded-pill"><%= lodging[:price] %> €</span>
                </div>
              </div>
              <div class="card-body">
                <p class="card-text"><%= lodging[:description] %></p>
                <div class="d-flex align-items-center text-warning">
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-fill me-1"></i>
                  <i class="bi bi-star-half"></i>
                  <small class="text-muted ms-2">4.5</small>
                </div>
              </div>
              <div class="card-footer bg-transparent">
                <%= link_to "Réserver maintenant", lodging_path(lodging[:key]), class: "btn btn-warning w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning">Aucun logement similaire trouvé.</div>
    <% end %>
  </section>
</div>